{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "logs",
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogStream",
                "logs:CreateLogGroup",
                "logs:PutLogEvents"
            ],
            "Resource": "arn:aws:logs:*:*:*"
        },
        {
            "Sid": "lambdas",
            "Effect": "Allow",
            "Action": [
                "lambda:*"
            ],
            "Resource": ${lambda_arns}
        },
        {
            "Sid": "buckets",
            "Effect": "Allow",
            "Action": [
                "s3:*"
            ],
            "Resource": [
                "${build_bucket_arn}",
                "${build_bucket_arn}/*"
            ]
        }
    ]
}